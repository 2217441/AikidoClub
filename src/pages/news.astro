---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

// Get news from content collection
const newsCollection = await getCollection('news');

// Sort: pinned items first, then by date descending
const newsItems = newsCollection
  .sort((a, b) => {
    // Pinned items first
    if (a.data.pinned && !b.data.pinned) return -1;
    if (!a.data.pinned && b.data.pinned) return 1;
    // Then sort by date (assuming format like "January 2026")
    return b.data.date.localeCompare(a.data.date);
  })
  .map(item => ({
    date: item.data.date,
    title: item.data.title,
    content: item.body,
    pinned: item.data.pinned,
    cta: item.data.ctaText ? {
      text: item.data.ctaText,
      link: item.data.ctaLink
    } : undefined
  }));

// Social media links
const socialLinks = [
  {
    name: "Instagram",
    handle: "@iiumaikidoclub",
    link: "https://instagram.com/iiumaikidoclub",
    class: "instagram",
    icon: `<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>`
  },
  {
    name: "Facebook",
    handle: "Facebook Page",
    link: "https://www.facebook.com/iiumaikidoclub/",
    class: "facebook",
    icon: `<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>`
  }
];
---

<BaseLayout 
  title="News | IIUM Aikido Club" 
  description="Stay updated with the latest news from IIUM Aikido Club - Announcements, updates, and martial arts community news."
>
  <!-- Hero Section -->
  <section class="head-page relative w-full h-[60vh] min-h-[400px] overflow-hidden">
    <!-- Background image -->
    <div class="absolute inset-0">
      <img 
        src={`${base}img/image1.png`}
        alt="Aikido club members practicing" 
        class="w-full h-full object-cover"
        loading="eager"
      />
      <!-- Dark overlay -->
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    
    <!-- Title -->
    <div class="absolute inset-0 flex flex-col items-center justify-center z-10">
      <h1 class="text-white text-4xl sm:text-5xl lg:text-6xl font-bold drop-shadow-[4px_8px_4px_rgba(0,0,0,0.5)]">
        News
      </h1>
    </div>
    
    <!-- Bottom curve decoration -->
    <div class="absolute bottom-0 left-0 right-0 h-16 bg-[#f5f5f5] rounded-t-[50%]"></div>
  </section>

  <!-- News Section -->
  <section id="main-content" class="bg-[#f5f5f5] py-12 px-4 sm:px-8">
    <div class="max-w-5xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-primary-dark text-2xl sm:text-3xl font-bold mb-4">
          Latest News & Announcements
        </h2>
        <div class="deco-line mx-auto"></div>
      </div>

      <!-- News Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
        {newsItems.map((item) => (
          <article class={`news-card bg-white rounded-xl p-6 shadow-md border-l-4 
                          ${item.pinned ? 'md:col-span-2 border-l-red-500 bg-gradient-to-br from-white to-red-50' : 'border-l-accent-pink'}
                          hover:shadow-lg hover:-translate-y-1 transition-all duration-200`}>
            {item.pinned && (
              <span class="inline-block bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full mb-3">
                ðŸ“Œ Pinned
              </span>
            )}
            <span class="text-gray-400 text-sm uppercase tracking-wide">
              {item.date}
            </span>
            <h3 class="text-lg sm:text-xl font-bold text-gray-800 mt-2 mb-3">
              {item.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">
              {item.content}
            </p>
            {item.cta && (
              <a 
                href={item.cta.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block mt-4 text-accent-pink font-semibold hover:text-red-500 transition-colors"
              >
                {item.cta.text}
              </a>
            )}
          </article>
        ))}
      </div>

      <!-- Social Media Section -->
      <div class="bg-white rounded-xl p-8 text-center shadow-sm">
        <p class="text-gray-600 text-lg mb-6">
          Follow us on social media for real-time updates:
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          {socialLinks.map((social) => (
            <a 
              href={social.link}
              target="_blank"
              rel="noopener noreferrer"
              class={`social-btn ${social.class} inline-flex items-center justify-center gap-3 
                     px-6 py-3 rounded-full text-white font-medium
                     hover:scale-105 hover:shadow-lg transition-all duration-200`}
            >
              <svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5" aria-label={social.name}>
                <Fragment set:html={social.icon} />
              </svg>
              {social.handle}
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Subscribe CTA Section -->
  <section class="bg-white py-12 px-4 sm:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-primary-dark text-2xl sm:text-3xl font-bold mb-4">
        Stay Connected
      </h2>
      <p class="text-gray-600 text-base sm:text-lg mb-8 max-w-2xl mx-auto">
        Don't miss out on training sessions, events, and club activities. 
        Join our community and be part of the Aikido family!
      </p>
      <a 
        href="https://forms.gle/hRwYhA1K96wzq28f6"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block bg-accent-pink hover:bg-red-600 text-white 
               px-6 py-3 rounded-lg font-medium text-base
               transition-all duration-200 hover:scale-105 hover:shadow-lg"
      >
        Join IIUM Aikido Club
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Decorative line */
  .deco-line {
    display: block;
    height: 3px;
    background-color: rgb(177, 112, 112);
    width: 100px;
  }

  /* Social button styles */
  .social-btn.instagram {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
  }

  .social-btn.facebook {
    background: #1877f2;
  }
</style>
